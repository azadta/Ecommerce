            <div class="container-fluid">
                <h1>All Orders</h1>
                <% if (typeof message !== 'undefined' && message) { %>
                    <h5 class="<%= message.includes('deleted') ? 'message-error' : 'message-success' %>">
                        <%= message %>
                    </h5>
                <% } %>
                
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>User</th>
                            <th>Shipping Info</th>
                            <th>Items</th>
                            <th>Total Price</th>
                            <th>Order Status</th>
                            <th>Order Date</th>
                            <th>Update Status</th> 
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order._id %></td>
                                <td><%= order.user.name %> (<%= order.user.email %>)</td>
                                <td>
                                    <p><strong>Label:</strong> <%= order.shippingInfo.label %></p>
                                    <p><strong>Address:</strong> <%= order.shippingInfo.addressLine1 %>, <%= order.shippingInfo.city %>, <%= order.shippingInfo.postalCode %>, <%= order.shippingInfo.country %></p>
                                    <p><strong>Phone:</strong> <%= order.shippingInfo.phoneNo %></p>
                                </td>
                                <td>
                                    <ul>
                                        <% order.orderItems.forEach(item => { %>
                                            <li><%= item.name %> - Quantity: <%= item.quantity %> - Price: $<%= item.price.toFixed(2) %></li>
                                        <% }) %>
                                    </ul>
                                </td>
                                <td>$<%= order.totalPrice.toFixed(2) %></td>
                                <% if (order.orderStatus === 'canceled') { %>
                                    <td style="color: red;"><%= order.orderStatus %></td>
                                <% } else { %>
                                    <td><%= order.orderStatus %></td>
                                <% } %>
                                <td><%= order.createdAt.toDateString() %></td>
                                <td>
                                    <div class="actions">
                                        <!-- Change Status Form -->
                                        <form action="/admin/updateOrderStatus/<%= order._id %>?_method=put" method="post">
                                            <select name="orderStatus" onchange="this.form.submit()">
                                                <option value="<%= order.orderStatus %>" selected><%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %></option>
                                                <% const statuses = ['processing', 'shipped', 'delivered', 'canceled']; %>
                                                <% statuses.forEach(status => { %>
                                                    <% if (status !== order.orderStatus) { %>
                                                        <option value="<%= status %>"><%= status.charAt(0).toUpperCase() + status.slice(1) %></option>
                                                    <% } %>
                                                <% }) %>
                                            </select>
                                        </form>
                                        
                                        
                                        
                                    </div>
                                </td>
                                <td>
                                    <!-- Delete Order Form -->
                                    <form action="/admin/deleteOrder/<%= order._id %>?_method=delete" method="POST" onsubmit="return confirmDelete()">
                                        <button class="btn btn-delete" type="submit">
                                            <i class="fas fa-trash-alt"></i> <!-- Font Awesome trash icon -->
                                        </button>
                                    </form>
                                    
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
