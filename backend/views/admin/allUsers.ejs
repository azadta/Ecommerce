                <!-- Product Section -->
              
                <div class="container mt-4 ml-3">
                    <div style="display: flex; align-items: flex-start;">
                        <form action="/admin/singleUser" method="post" style="margin-right: 100px;">
                            <button id="singleUserBtn" class="btn btn-danger btn-sm" type="submit">Get Single User</button>
                            <br><br>
                            <input type="text" id="userIdInput" class="form-control" placeholder="Enter user ID" style="width: 300px;" name="userId">
                        </form>
            
                    </div>
                </div>
                <br>
                    
               
              <%if(message){%>
               <h5 style="color: blue;"><%= message %></h5>


              <% } %>
                <br>
                <h2>All Users</h2>
         
              
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Mobile No</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <td><%= user._id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.mobile %></td>
                            <td><%= user.role %></td>
                            <td>
                                <td>
                                    <form action="/admin/singleUser" method="post">
                                        <button id="editBtn" class="btn btn-primary btn-sm" type="submit">Edit</button>
                                        <input type="hidden" value="<%= user._id %>" name="userId">
                                    </form>
                                    </td>
                                    <td>
                                        <form id="deleteForm" action="/admin/deleteUser/<%= user._id %>?_method=delete" method="post">
                                        <button id="deleteBtn" class="btn btn-danger btn-sm" type="submit">Delete</button>
                                        </form>
                                    </td>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <div class="col-lg-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/getAllUsers?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
                            </li>
                            <% } else { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <% } %>
                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/admin/getAllUsers?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                            <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/getAllUsers?page=<%= currentPage + 1 %>">Next</a>
                            </li>
                            <% } else { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Next</a>
                            </li>
                            <% } %>
