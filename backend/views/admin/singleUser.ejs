            <div class="container-fluid">
                <h1 class="mt-4">Admin Panel</h1>
                <br>
                <!-- User Details Section -->
                <h5 style="color: black;">Single User Details</h5>
                <table class="user-details-table" style="color: black; line-height: 35px;">
                    <tr>
                        <td>User ID</td>
                        <td><%= user._id %></td>
                    </tr>
                    <tr>
                        <td>Name</td>
                        <td><%= user.name %></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td><%= user.email %></td>
                    </tr>
                    <tr>
                        <td>Mobile No</td>
                        <td><%= user.mobile %></td>
                    </tr>
                    <tr>
                        <td>Role</td>
                        <td><%= user.role %></td>
                    </tr>
                    <tr>
                        <td>Is Blocked</td>
                        <td><%= user.isBlocked %></td>
                    </tr>
                </table>
                <br>
                <!-- Button Section -->
                <div class="btn-group" role="group" aria-label="User Actions">
                    <button id="editBtn" class="btn btn-primary btn-sm" data-user-id="<%= user._id %>" >Edit</button>
                    <form action="/admin/deleteUser/<%= user._id %>?_method=delete" method="post" class="d-inline">
                        <button class="btn btn-danger btn-sm" type="submit" style="margin-left: 20px;">Delete</button>
                    </form>
                    <%if(!user.isBlocked){%>
                    <form action="/admin/blockUser/<%= user._id %>?_method=put" method="post" class="d-inline">
                        <button class="btn btn-warning btn-sm" type="submit" style="margin-left: 20px;">Block</button>
                 </form>   
                    <%}else{%>
                    <form action="/admin/unblockUser/<%= user._id %>?_method=put" method="post" class="d-inline">
                        <button class="btn btn-success btn-sm" type="submit" style="margin-left: 20px;">Unblock</button>
                    </form>
                    <%}%>
                </div>
                <br><br>
                <% if (message) { %>
                    <h5 style="color: blue;"><%= message %></h5>
                <% } %>
