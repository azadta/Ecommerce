        <div class="container-fluid">
            <h1 class="mt-4">Admin Dashboard</h1>
            <div class="container mt-4">
                <div class="row">
                    <div class="col">
                        <form action="/admin/getSingleOffer" method="post">
                            
                            <button id="singleUserBtn1" class="btn btn-danger btn-sm" type="submit">Get Single Offer</button>
                            <br>
                            <br>
                            <input type="text" id="userIdInput" class="form-control mb-2" placeholder="Enter Coupon ID" style="width: 300px" name="offerId">
                        </form>
                    </div>
                    <div class="col">
                        <form action="/admin/createOffer" method="get">
                            <button id="singleUserBtn2" class="btn btn-danger btn-sm" type="submit">Create Offer</button>
                        </form>
                    </div>
                </div>
            </div>
        
            <br>
            
            <div class="container">
                <h3 class="mt-4">All Offers</h3>
                <% if (message) { %>
                    <h4 style="color: blue;"><%= message %></h4>
                <% } %>
                
                <table class="table table-striped mt-4">
                    <thead>
                        <tr>
                            <th scope="col">Offer ID</th>
                            <th scope="col">Offer Name</th>
                            <th scope="col">Discount Percentage</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">End Date</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% offers.forEach(offer => { %>
                            <tr>
                                <td><%= offer._id %></td>
                                <td><%= offer.name %></td>
                                <td><%= offer.discountPercentage %>%</td>
                                <td><%= new Date(offer.startDate).toLocaleDateString() %></td>
                                <td><%= new Date(offer.endDate).toLocaleDateString() %></td>
                                <td>
                                    <form action="/admin/singleOfferDetails" method="POST" style="display:inline;">
                                        <input type="hidden" name="offerId" value="<%= offer._id %>">
                                        <button type="submit" class="btn btn-danger btn-sm">Edit</button>
                                    </form>
                                
                                   
                                    <form action="/admin/deleteOffer/<%= offer._id %>?_method=DELETE" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        
          
               

               
                
