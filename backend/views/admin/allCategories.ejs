            <div class="container-fluid">
                <h1 class="mt-4" >Admin Panel</h1>
                <br>
                <div class="container mt-4 ml-3">
                    <div class="d-flex">
                       
                
                        <form action="/admin/getSingleCategory" method="post" class="custom-form-spacing">
                            <button id="singleCategoryBtn" class="btn btn-danger btn-sm" type="submit">Get Single Category</button>
                            <br>
                            <br>
                            <input type="text" id="userIdInput" class="form-control" placeholder="Enter category ID" style="width: 300px" name="categoryId">
                        </form>
                        <form action="/admin/createNewCategory" method="get" class="custom-form-spacing">
                            <button id="createCategoryBtn" class="btn btn-danger btn-sm" type="submit">Create New Category</button>
                        </form>
                    </div>
                
                    <!-- Product Section -->
                   
                </div>
                <br>
              <%if(message){%>
               <h5 style="color: rgb(8, 192, 11);"><%= message %></h5>


              <% } %>
                <br>
                <h2>All Category</h2>
         
              
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                            <th>Parent Category </th>
                            <th>Category Description</th>

                            <th>Status</th>
                            
                             <th>Action</th>
                             <th>Action</th>
                            </tr>
                             </thead>
                                <tbody>
                                    <%if(categories){%>
                                    <% categories.forEach(category => { %>
                                    <tr>
                                        <td><%= category._id %></td>
                                        <td><%= category.name %></td>
                                        <td><%= category.parentCategoryName %></td>
                                        <td><%= category.description %></td>
                                        <td><%= category.status %></td>
                                    
                                    
                                        <td>
                                            <form action="/admin/getSingleCategory" method="post">
                                            <button id="editBtn" class="btn btn-primary btn-sm">Edit</button>
                                            <input type="hidden" id="userIdInput" class="form-control" placeholder="Enter category ID" style="width: 300px" name="categoryId" value="<%= category._id %>">
                                             </form>
                                        </td>
                                        <td>
                                            <form action="/admin/deleteCategory/<%= category._id %>?_method=delete" method="post">
                                            <button id="deleteBtn" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    
                                    </tr>
                                    <% }) %>
                                <% } %> 
                                </tbody>
                            </table>
                            <div class="col-lg-12">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">
                                        <% if (currentPage > 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/admin/getAllCategories?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
                                        </li>
                                        <% } else { %>
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                                        </li>
                                        <% } %>
                                        <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                            <a class="page-link" href="/admin/getAllCategories?page=<%= i %>"><%= i %></a>
                                        </li>
                                        <% } %>
                                        <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/admin/getAllCategories?page=<%= currentPage + 1 %>">Next</a>
                                        </li>
                                        <% } else { %>
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">Next</a>
                                        </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            </div>
                       
            
                            
                           
