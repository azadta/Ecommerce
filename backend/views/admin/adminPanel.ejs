    <script>
        async function dismissAlert(alertId) {
            try {
                const response = await fetch(`/admin/alerts/${alertId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    document.getElementById(`alert-${alertId}`).remove();
                } else {
                    console.error('Failed to delete alert');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
