        <!-- Template Javascript -->
        <script src="js/main.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const newAddressRadio = document.getElementById('new-address');
                const newAddressForm = document.getElementById('new-address-form');
            
                newAddressRadio.addEventListener('change', function() {
                    if (newAddressRadio.checked) {
                        newAddressForm.style.display = 'block';
                    }
                });
            
                // Hide new address form if existing address is selected
                const existingAddressRadios = document.querySelectorAll('input[name="address"]:not(#new-address)');
                existingAddressRadios.forEach(radio => {
                    radio.addEventListener('change', function() {
                        if (radio.checked) {
                            newAddressForm.style.display = 'none';
                        }
                    });
                });
            });
            </script>
            
    </body>
