<script>
    // Function to reset the page to 1 and submit the form when sorting is changed
    function resetPageAndSubmit() {
        const sortSelect = document.getElementById('sortSelect');
        const selectedSort = sortSelect.options[sortSelect.selectedIndex].value;
        const sortOrder = document.getElementById('sortOrder');
        
        // Set the sort order based on the selected option
        if (selectedSort === 'price') {
            sortOrder.value = sortSelect.options[sortSelect.selectedIndex].text.includes('High to Low') ? '-1' : '1';
        } else if (selectedSort === 'alphabetical') {
            sortOrder.value = sortSelect.options[sortSelect.selectedIndex].text.includes('Z to A') ? '-1' : '1';
        } else {
            // Default descending order for other options
            sortOrder.value = '-1';
        }
    
        // Reset the page number to 1 when sorting is changed
        document.getElementById('pageInput').value = 1;

        // Ensure the search query is included during sorting
        let searchQuery = '<%= searchQuery || "" %>'; // Use double quotes here
        if (searchQuery) {
            let searchInput = document.createElement('input');
            searchInput.type = 'hidden';
            searchInput.name = 'search';
            searchInput.value = searchQuery;
            document.getElementById('sortForm').appendChild(searchInput);
        }
    
        // Submit the form to apply the selected sorting and reset the page number
        document.getElementById('sortForm').submit();
    }

    // Function to submit form when changing categories (excluding search criteria)
    function submitFormWithCriteria() {
        // Reset to the first page when changing category
        document.getElementById('pageInput').value = 1;

        // Remove the search input if it exists to exclude search criteria in category filtering
        const searchInput = document.querySelector('input[name="search"]');
        if (searchInput) {
            searchInput.remove();
        }
        
        // Submit the form
        document.getElementById('sortForm').submit();
    }
</script>

<script>
    // Retrieve the JSON string from the hidden input and parse it
    var categoriesWithParents = JSON.parse(document.getElementById('categoriesWithParentsData').value);

    // Function to update the category name attribute and submit the form
    function updateNameAttribute() {
        var selectElement = document.getElementById('categorySelect');
        var selectedValue = selectElement.value;

        // Determine the name attribute based on the newly selected category
        if (categoriesWithParents.includes(selectedValue)) {
            selectElement.name = 'parentCategoryId';
        } else {
            selectElement.name = 'category';
        }

        // Optionally submit the form automatically after changing the category
        submitFormWithCriteria();
    }
</script>



